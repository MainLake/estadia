  <style>
    :root {
      --primary-color: #003366;
      --secondary-color: #0066cc;
      --accent-color: #6c757d;
      --bg-color: #f8f9fa;
    }

    .reveal { font-family: 'Segoe UI', 'Roboto', sans-serif; color: #333; font-size: 26px; }
    .reveal h1, .reveal h2, .reveal h3, .reveal h4 { color: var(--primary-color); text-transform: none; font-weight: 700; }
    .reveal h2 { border-bottom: 3px solid var(--secondary-color); padding-bottom: 10px; margin-bottom: 20px; font-size: 1.6em; }

    /* Logos Header */
    .header-logos { display: flex; justify-content: space-between; padding: 0 20px; margin-bottom: 20px; }
    .logo-img { height: 70px; width: auto; background: rgba(255,255,255,0.9); padding: 5px; border-radius: 5px; }

    /* Portada */
    .portada-bg {
      background: linear-gradient(160deg, var(--primary-color) 0%, #1a4a7c 100%);
      color: white !important; padding: 30px; border-radius: 15px; height: 100%;
      display: flex; flex-direction: column; justify-content: center;
    }
    .portada-bg h1, .portada-bg p { color: white !important; }
    .portada-bg h2 { color: white !important; border-color: rgba(255,255,255,0.3); }

    /* Estructura */
    .cols { display: grid; grid-template-columns: 1fr 1fr; gap: 30px; align-items: start; text-align: left; }
    .box { background: var(--bg-color); border-left: 5px solid var(--secondary-color); padding: 15px; margin: 10px 0; box-shadow: 2px 2px 5px rgba(0,0,0,0.1); }
    
    /* Diagram Placeholder - ESTILO PARA LOS DIAGRAMAS */
    .diagram-box {
      border: 2px dashed #ccc;
      background: #fff;
      height: 450px; /* Altura fija para que no se desborde */
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      margin: 10px auto;
      border-radius: 8px;
      color: #666;
    }
    .diagram-box img {
      max-height: 100%;
      max-width: 100%;
      object-fit: contain;
    }

    /* Tablas y Scroll */
    table { font-size: 0.7em !important; width: 100%; border-collapse: collapse; }
    table th { background: var(--primary-color); color: white; padding: 8px; }
    table td { border-bottom: 1px solid #ddd; padding: 6px; }
    .badge { padding: 3px 6px; border-radius: 4px; color: white; font-size: 0.8em; font-weight: bold; }
    .badge.success { background: #28a745; } .badge.warning { background: #ffc107; color: #333; } .badge.info { background: #17a2b8; }
    .scroll-container { max-height: 500px; overflow-y: auto; }

    /* Referencias APA */
    .apa-ref { font-size: 0.6em; text-align: left; margin-bottom: 8px; padding-left: 20px; text-indent: -20px; }
  </style>
